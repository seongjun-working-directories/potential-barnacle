{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ES2020", "ES2020.BigInt", "ESNext", "ESNext.BigInt"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    "preserveValueImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node", "jsdom"],
    "useDefineForClassFields": true
  },
  "exclude": ["src/**/__tests__/*", "dist", "node_modules"],
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
}
